{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fo:./build/",                  // Redirect .obj files to 'build' directory
                "/Fd:./build/",                  // Redirect .pdb file to 'build' directory
                "/nologo",
                "/Fe${fileDirname}/build/${fileWorkspaceFolderBasename}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}